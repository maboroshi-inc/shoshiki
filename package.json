{
  "name": "@maboroshi/shoshiki",
  "version": "1.0.0",
  "description": "Common utilities to format text.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "doc": "typedoc --out ./docs --mode file --theme minimal",
    "lint": "tslint src/**/*.ts __tests__/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "precommit": "lint-staged",
    "prepublish": "npm run lint && npm run test && npm run build",
    "release": "release-it --no-npm.publish",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/maboroshi-inc/shoshiki.git"
  },
  "author": "Maboroshi Co., Ltd.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maboroshi-inc/shoshiki/issues"
  },
  "homepage": "https://github.com/maboroshi-inc/shoshiki#readme",
  "devDependencies": {
    "@maboroshi/prettier-config": "^1.0.0",
    "@maboroshi/tslint-config": "^1.0.0",
    "@types/jest": "^23.3.2",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "release-it": "^7.6.1",
    "rollup": "^0.65.2",
    "rollup-plugin-commonjs": "^9.1.6",
    "rollup-plugin-filesize": "^4.0.1",
    "rollup-plugin-progress": "^0.4.0",
    "rollup-plugin-typescript2": "^0.17.0",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "typedoc": "^0.12.0",
    "typescript": "^3.0.3"
  },
  "lint-staged": {
    "*.{ts,js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
